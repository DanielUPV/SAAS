@model SIDEVIC.Models.Indicador_area

@{
    ViewBag.Title = "Create";
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#btn_Modal').click(function () {
            
            window.location.href = '@Url.Action("Index","Indicador_area")';
        });
        var op = '@ViewBag.Flag';
        if (op == "field_error") {
            $('#modalError').modal('show');
        }

    });
</script>

<br />



<div style="width:100%">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group" style="width:50%;margin:auto">
            <div>
                <h3>Asociar un area con un indicador</h3>
            </div>
            <hr />
          
            <div class="form-group">
                @Html.Label("Indicador", "Indicador", htmlAttributes: new { @class = "" })

                @Html.DropDownList("id_indicador", null, htmlAttributes: new { @class = "form-control", @id = "indicador" })
                @Html.ValidationMessageFor(model => model.id_indicador, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.Label("Area", "Area", htmlAttributes: new { @class = "" })

                @Html.DropDownList("id_area", null, htmlAttributes: new { @class = "form-control", @id = "area" })
                @Html.ValidationMessageFor(model => model.id_area, "", new { @class = "text-danger" })

            </div>
            <div class="form-group" style="text-align:right">

                <button type="button" id="btn_Modal" class="btn btn-danger">
                    Volver
                </button>
                <input type="submit" value="Añadir" class="btn btn-success" />
            </div>
        </div>
    }


</div>


<!-- Modal -->
<div class="modal fade" id="modalVolver" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background:#045cb8;color:#fff">
                <h4 class="modal-title" id="myModalLabel">¿Está seguro de querer volver sin guardar?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <p style="text-align:center;font-size:large">
                    Si vuelve, no se asociara el indicador con el area
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal">Cerrar</button>
                <a href="@Url.Action("Index","Indicador_area")" class="btn btn-danger">Volver</a>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalError" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background:#ff0000;color:#fff">
                <h4 class="modal-title" id="myModalLabel">¡El indicador y el area ya estan asociados!</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <p style="text-align:center;font-size:large">
                    Selecicone un indicador o area diferente
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal" id="btnModalError_aceptar">Aceptar</button>
            </div>
        </div>
    </div>
</div>
