@model SIDEVIC.Models.Area

@{
    ViewBag.Title = "Edit";
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#btn_Modal').click(function () {
            var nombre = $('#nombre').val();
            var direccion = $('#direccion').val();
            var persona_val = $('#persona_val').val();
            var informacion = $('#informacion').val();
            var correo = $('#correo').val();
            var telefono = $('#telefono').val();

            if (nombre != "@ViewBag.nombre" || direccion != "@ViewBag.direccion" || persona_val != "@ViewBag.persona_val" || informacion != "@ViewBag.informacion" || correo != "@ViewBag.correo" || telefono != "@ViewBag.telefono") {
                $('#modalVolver').modal('show');
            } else {
                window.location.href = '@Url.Action("Index","Usuarios")';
            }


        });

        var op = '@ViewBag.Flag';
        if (op == "field_error") {
            var nombre = $('#nombre').val();
            var direccion = $('#direccion').val();
            var informacion = $('#informacion').val();
            var correo = $('#correo').val();
            var telefono = $('#telefono').val();
            if (telefono == "") {
                document.getElementById('telefono').style.border = "1px solid #ff0000";
            }
            if (correo == "") {
                document.getElementById('correo').style.border = "1px solid #ff0000";
            }
            if (informacion == "") {
                document.getElementById('informacion').style.border = "1px solid #ff0000";
            }
            if (direccion == "") {
                document.getElementById('direccion').style.border = "1px solid #ff0000";
            }
            if (nombre == "") {
                document.getElementById('nombre').style.border = "1px solid #ff0000";
            }

            $('#modalError').modal('show');
        }

    });
</script>

<br />



<div style="width:100%">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-group" style="width:50%;margin:auto">
        <div>
            <h3>Editar dirección</h3>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_area)

        <div class="form-group">
            @Html.Label("Nombre dirección", "Nombre dirección", htmlAttributes: new { @class = "" })

            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @id = "nombre", @autofocus = "" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })

        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Dirección", "Dirección", htmlAttributes: new { @class = "" })

            @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control", @id = "direccion" } })
            @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            @Html.Label("Persona encargada", "Persona encargada", htmlAttributes: new { @class = "" })

            @Html.DropDownList("id_persona", null, htmlAttributes: new { @class = "form-control", @id = "persona_val" })
            @Html.ValidationMessageFor(model => model.id_persona, "", new { @class = "text-danger" })

        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Información", "Información", htmlAttributes: new { @class = "" })

            @Html.EditorFor(model => model.informacion, new { htmlAttributes = new { @class = "form-control", @id = "informacion" } })
            @Html.ValidationMessageFor(model => model.informacion, "", new { @class = "text-danger" })

        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Correo", "Correo", htmlAttributes: new { @class = "" })

            @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control", @id = "correo" } })
            @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })

        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Teléfono", "Teléfono", htmlAttributes: new { @class = "" })

            @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control", @id = "telefono" } })
            @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })

        </div>
        <div class="form-group" style="text-align:right">

            <button type="button" id="btn_Modal" class="btn btn-danger">
                Volver
            </button>
            <input type="submit" value="Guardar" class="btn btn-success" />
        </div>
    </div>
    }


</div>

<!-- Modal -->
<div class="modal fade" id="modalVolver" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background:#045cb8;color:#fff">
                <h4 class="modal-title" id="myModalLabel">¿Está seguro de querer volver sin guardar?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <p style="text-align:center;font-size:large">
                    Si vuelve, no se guardarán los cambios realizádos
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal">Cerrar</button>
                <a href="@Url.Action("Index","Areas")" class="btn btn-danger">Volver</a>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalError" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background:#ff0000;color:#fff">
                <h4 class="modal-title" id="myModalLabel">¡Campos sin llenar!</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <p style="text-align:center;font-size:large">
                    Complete los campos sin llenar
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal" id="btnModalError_aceptar">Aceptar</button>
            </div>
        </div>
    </div>
</div>
