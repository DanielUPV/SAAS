                        <th colspan="3">Evaluación</th>
                    </tr>
                    <tr>
                        <th style="background-color: #31E416CC;"></th>
                        <th style="background-color: #FFFD0BCC;"></th>
                        <th style="background-color: #FF0000CC;"></th>
                    </tr>

                </thead>
                <tbody>
                    <tr>
                        <th scope="row">Gestión</th>
                        <td>@Model.cantidad_gestion</td> <!--Total-->
