<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=yes">
    <title>@ViewBag.Title - SIDEVIC</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/Content/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.0/css/bootstrap.min.css" integrity="sha384-SI27wrMjH3ZZ89r4o+fGIJtnzkAnFs3E4qz9DIYioCQ5l9Rd/7UAa8DHcaL8jkWt" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.0/js/bootstrap.min.js" integrity="sha384-3qaqj0lc6sV/qpzrc1N5DC6i1VRn/HyX4qdPaiEFbn54VjQBEU341pvjz7Dv3n6P" crossorigin="anonymous"></script>

</head>

<body>
    <script type="text/javascript">
        function cerrarSesionFunc() {
            $('#modalCerrarSesion').modal('show');
        }
        $(document).ready(function () {
            $('#btnModalCerrarSesion').click(function () {
                window.location.href = '@Url.Action("Logoff","Access")';
            });
        });
    </script>
    @{
        if (Session["Usuario"] != null)
        {
        <nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color: #ffffff;">
            <!--Navbar-->
            <a class="navbar-brand">
                <img src="~/Content/img/logovic.png" height="60" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Inicio</a>
                </li>
                

                @{
                    if (Session["Rol"].ToString() == "Administrador")
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="dropdown" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Administracion</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown01">
                                <a class="dropdown-item" href="@Url.Action("Index", "Usuarios")">Usuarios</a>
                                <!-- <a class="dropdown-item" href="Url.Action("Index", "Frecuencias")">Opciones de frecuencia</a>
     <a class="dropdown-item" href="Url.Action("Index", "Tipo_indicador")">Tipo de indicador</a>-->
                                <a class="dropdown-item" href="@Url.Action("Index", "Personas")">Personas</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Areas")">Direcciones</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Area_Cargo")">Areas a cargo</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Ejes")">Ejes</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Temas")">Temas</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Programas")">Programas</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Subprogramas")">Subprogramas</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Indicadors")">Indicadores</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Indicador_area")">Indicadores Areas</a>


                            </div>
                        </li>
                    }
                    else
                    {
                        if (Session["Rol"].ToString() == "Capturista")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="dropdown" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Administracion</a>
                                <div class="dropdown-menu" aria-labelledby="dropdown01">
                                    <a class="dropdown-item" href="@Url.Action("Index", "Personas")">Personas</a>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Areas")">Direcciones</a>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Area_Cargo")">Areas a cargo</a>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Ejes")">Ejes</a>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Temas")">Temas</a>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Programas")">Programas</a>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Subprogramas")">Subprogramas</a>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Indicadors")">Indicadores</a>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Indicador_area")">Indicadores Areas</a>


                                </div>
                            </li>
                        }
                    }
                    //if (Session["Rol"].ToString() == "Alcalde" || Session["Rol"].ToString() == "Administrador" || Session["Rol"].ToString() == "Director")
                    if (Session["Rol"].ToString() == "Alcalde" || Session["Rol"].ToString().ToString() == "Administrador")
                    {
                        <li class="nav-item dropdown">

                            <a class="nav-link dropdown-toggle" href="dropdown" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Pantallas</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown01">
                                <a class="dropdown-item" href="@Url.Action("Resumen", "IndicadoresAlcalde")">Resumen</a>
                                <a class="dropdown-item" href="@Url.Action("TableroControl", "IndicadoresAlcalde")">Tablero de control</a>
                                <a class="dropdown-item" href="@Url.Action("ProgramasMejora", "IndicadoresAlcalde")">Programas de mejora</a>
                                <a class="dropdown-item" href="@Url.Action("Diagnostico", "IndicadoresAlcalde")">Diagnostico</a>
                                <a class="dropdown-item" href="@Url.Action("DetallesProgramasPMD", "IndicadoresAlcalde")">Detalles programa</a>

                            </div>
                        </li>
                    }
                    if (Session["Rol"].ToString() == "Director")
                    {
                        <li class="nav-item dropdown">

                            <a class="nav-link dropdown-toggle" href="dropdown" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Pantallas</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown01">
                                <a class="dropdown-item" href="@Url.Action("Resumen", "IndicadoresDirector")">Resumen</a>
                                <a class="dropdown-item" href="@Url.Action("TableroControl", "IndicadoresDirector")">Tablero de control</a>
                                <a class="dropdown-item" href="@Url.Action("ProgramasMejora", "IndicadoresDirector")">Programas de mejora</a>
                                <a class="dropdown-item" href="@Url.Action("Diagnostico", "IndicadoresDirector")">Diagnostico</a>
                                <a class="dropdown-item" href="@Url.Action("DetallesProgramasPMD", "IndicadoresDirector")">Detalles programa</a>

                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="dropdown" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Evaluacion</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown01">
                                <a class="dropdown-item" href="@Url.Action("IndicadoresDesempeño", "IndicadoresDirector")">Indicadores desempeño</a>

                            </div>

                        </li>
                    }
                }

            </ul>
            <ul class="nav navbar-nav navbar-right">
               
                <li class="nav-item">
                    <a class="nav-link" href="#" onclick="cerrarSesionFunc()">Cerrar sesion(@Session["Usuario"])</a>
                </li>
                <li class="nav-item">
                    <img style="margin-right:15%"  src="~/Content/img/logotam.png" height="40" aling="right">

                </li>
                
            </ul>
        </nav> <!--Fin navbar-->
        }
    }

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SIDEVIC</p>
        </footer>
    </div>

</body>
</html>

<div class="modal fade" id="modalCerrarSesion" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background:#045cb8;color:#fff">

                <h4 class="modal-title" id="myModalLabel">¿Está seguro de cerrar sesión?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

            </div>
            <div class="modal-body">
                <p style="text-align:center;font-size:medium">
                    De click en aceptar para cerrar sesión
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" id="btnModalCerrarSesion">Aceptar</button>
            </div>
        </div>
    </div>
</div>